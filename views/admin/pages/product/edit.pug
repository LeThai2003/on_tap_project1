extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    +alert-error(3000)
    +alert-success(3000)

    h2.mb-4 #{pageTitle}

    form(
        action=`/${prefixAdmin}/products/edit/${product.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=product.title
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                name="description"
                id="desc"
                class="form-control"
                rows="5"
            ) #{product.description}
        div(class="form-group")
            lable(for="price") Giá
            input(
                type="number"
                id="price"
                class="form-control"
                name="price"
                value=product.price
                min="0"
            )
        div(class="form-group")
            label(for="discountPercentage") Phần trăm giảm giá
            input(
                type="number"
                id="discountPercentage"
                class="form-control"
                name="discountPercentage"
                min="0"
                value=product.discountPercentage
            ) 
        div(class="form-group")
            lable(for="stock") Số lượng 
            input(
                type="number"
                name="stock"
                class="form-control"
                id="stock"
                min="0"
                value=product.stock
            )
        div(class="form-group" div-preview-image)
            label(for="thumbnail") Ảnh
            input(
                type="file"
                name="thumbnail"
                class="form-control-file"
                id="thumbnail"
                accept="image/*"
                input-upload-image
            )
            img(
                src=product.thumbnail
                preview-image
            )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                placeholder="Vị trí tự động tăng"
                class="form-control"
                name="position"
                id="position"
                min="1"
                value=product.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio" 
                name="status"
                class="form-check-input"
                id="statusActive"
                value="active"
                checked=(product.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="from-check-input"
                name="status"
                value="inactive"
                id="statusInactive"
                checked=(product.status == "inactive" ? true : false)
            )
            label(class="form-check-label" for="statusInactive") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
