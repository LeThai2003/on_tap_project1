extends ../../layouts/default.pug 
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main 
    h2.mb-4 #{pageTitle}

    .card.mb-4
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filterStatus(filterState)

                .col-6 
                    +search(keyword)

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT
                th Hình ảnh 
                th Tiêu đề 
                th Trạng thái 
                th Giá 
                th Hành động 
        tbody 
            each item, index in products
                tr  
                    td #{index + 1}
                    td 
                        img(src=item.thumbnail
                            alt=item.title
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td 
                        if(item.status == "active")
                            a(
                                href="javascript:;" 
                                class="badge badge-success"
                                data-status=item.status 
                                data-id=item.id
                                button-change-status
                            ) Hoạt động  
                        else 
                            a(
                                href="javascript:;" 
                                class="badge badge-danger"
                                data-status=item.status 
                                data-id=item.id
                                button-change-status
                            ) Dừng hoạt động
                    td #{item.price} $
                    td 
                        button(class="btn btn-warning btn-sm mr-2") Sửa 
                        button(class="btn btn-danger btn-sm") Xóa 

    +pagination(pagination)    


    form(
        action=""
        method="POST"
        path=`/${prefixAdmin}/products/change-status`
        form-change-status
    ) 