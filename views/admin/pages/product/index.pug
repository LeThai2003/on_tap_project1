extends ../../layouts/default.pug 
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/changeMulti.pug
include ../../mixins/alert.pug

block main 

    +alert-success(3000)

    h2.mb-4 #{pageTitle}

    .card.mb-4
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filterStatus(filterState)

                .col-6 
                    +search(keyword)

    .card.mb-4 
        .card-header Danh sách
        .card-body 
            +changeMulti(`/${prefixAdmin}/products/change-multi?_method=PATCH`)
              
            table.table.table-hover.table-sm(table-product)
                thead 
                    tr 
                        th 
                            input(type="checkbox" check-all)
                        th STT
                        th Hình ảnh 
                        th Tiêu đề 
                        th Trạng thái 
                        th Vị trí
                        th Giá 
                        th Hành động 
                tbody 
                    each item, index in products
                        tr  
                            td
                                input(
                                    type="checkbox" 
                                    check-item 
                                    name='id'
                                    data-id=item.id
                                )
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail
                                    alt=item.title
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td 
                                if(item.status == "active")
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-success"
                                        data-status=item.status 
                                        data-id=item.id
                                        button-change-status
                                    ) Hoạt động  
                                else 
                                    a(
                                        href="javascript:;" 
                                        class="badge badge-danger"
                                        data-status=item.status 
                                        data-id=item.id
                                        button-change-status
                                    ) Dừng hoạt động
                            td 
                                input(
                                    type="number"
                                    style="width:60px"
                                    value=item.position
                                    name="position"
                                    min="1"
                                )
                            td #{item.price} $
                            td 
                                button(class="btn btn-warning btn-sm mr-2") Sửa 
                                button(
                                    class="btn btn-danger btn-sm"
                                    button-delete 
                                    data-id=item.id
                                ) Xóa 

            +pagination(pagination)    


    form(
        action=""
        method="POST"
        path=`/${prefixAdmin}/products/change-status`
        form-change-status
    ) 

    form(
        action=""
        method="POST"
        path=`/${prefixAdmin}/products/delete`
        form-delete-product
    ) 